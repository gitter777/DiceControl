<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bac2"/>


    <ImageButton
        android:id="@+id/unknown"
        android:src="@drawable/castam7"
        android:onClick="goMenu2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/six"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="100dp"
        android:padding="1dp"
        android:layout_width="310dp"
        android:layout_height="130dp"/>

    <ImageButton
        android:id="@+id/two"
        android:src="@drawable/castam3"
        android:onClick="getCoin"
        app:layout_constraintLeft_toLeftOf="@id/unknown"
        app:layout_constraintBottom_toTopOf="@id/six"
        android:layout_marginBottom="15dp"
        android:padding="1dp"
        android:layout_width="148dp"
        android:layout_height="130dp"/>

    <ImageButton
        android:id="@+id/four"
        android:src="@drawable/castam4"
        android:onClick="getFour"
        app:layout_constraintRight_toRightOf="@id/unknown"
        app:layout_constraintBottom_toTopOf="@id/six"
        android:layout_marginBottom="15dp"
        android:padding="1dp"
        android:layout_width="148dp"
        android:layout_height="130dp"/>


    <ImageButton
        android:id="@+id/six"
        android:src="@drawable/castam2"
        android:onClick="getSix"
        app:layout_constraintLeft_toLeftOf="@id/unknown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="1dp"
        android:layout_width="148dp"
        android:layout_height="130dp"/>

    <ImageButton
        android:id="@+id/eight"
        android:src="@drawable/castam1"
        android:onClick="getEight"
        app:layout_constraintRight_toRightOf="@id/unknown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="1dp"
        android:layout_width="148dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/txC"
        android:text="coin"
        android:textSize="28sp"
        android:textColor="#ffffffff"
        app:layout_constraintLeft_toLeftOf="@id/two"
        app:layout_constraintTop_toTopOf="@id/two"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txF"
        android:text="4sides"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        app:layout_constraintLeft_toLeftOf="@id/four"
        app:layout_constraintTop_toTopOf="@id/four"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txS"
        android:text="6sides"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        app:layout_constraintLeft_toLeftOf="@id/six"
        app:layout_constraintTop_toTopOf="@id/six"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txE"
        android:text="8sides"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        app:layout_constraintLeft_toLeftOf="@id/eight"
        app:layout_constraintTop_toTopOf="@id/eight"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txFree"
        android:text="Free sides"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        app:layout_constraintLeft_toLeftOf="@id/unknown"
        app:layout_constraintTop_toTopOf="@id/unknown"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/sixs"
        app:layout_constraintRight_toRightOf="@id/six"
        app:layout_constraintBottom_toBottomOf="@id/six"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <ImageView
        android:src="@drawable/coins"
        app:layout_constraintRight_toRightOf="@id/two"
        app:layout_constraintBottom_toBottomOf="@id/two"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <ImageView
        android:src="@drawable/eight"
        app:layout_constraintRight_toRightOf="@id/eight"
        app:layout_constraintBottom_toBottomOf="@id/eight"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <ImageView
        android:src="@drawable/fours"
        app:layout_constraintRight_toRightOf="@id/four"
        app:layout_constraintBottom_toBottomOf="@id/four"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <ImageView
        android:src="@drawable/earth"
        app:layout_constraintRight_toRightOf="@id/unknown"
        app:layout_constraintBottom_toBottomOf="@id/unknown"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="75dp"
        android:layout_height="75dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>