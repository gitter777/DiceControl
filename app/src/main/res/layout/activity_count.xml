<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountActivity">

    <ImageView
        android:src="@drawable/bac2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="何回振る？"
        android:textColor="#FF3D00"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/a"
        android:src="@drawable/castam5"
        android:onClick="twoMore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="1dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <ImageButton
        android:id="@+id/b"
        android:src="@drawable/castam5"
        android:onClick="oneMore"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="@id/a"
        app:layout_constraintRight_toLeftOf="@id/a"
        android:padding="1dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <ImageButton
        android:id="@+id/c"
        android:src="@drawable/castam5"
        android:onClick="threeMore"
        app:layout_constraintLeft_toRightOf="@id/a"
        app:layout_constraintTop_toTopOf="@+id/a"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="1dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/x"
        android:text="1"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="@id/b"
        app:layout_constraintLeft_toLeftOf="@id/b"
        app:layout_constraintTop_toTopOf="@id/b"
        app:layout_constraintBottom_toBottomOf="@id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/y"
        android:text="2"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="@id/a"
        app:layout_constraintLeft_toLeftOf="@id/a"
        app:layout_constraintTop_toTopOf="@id/a"
        app:layout_constraintBottom_toBottomOf="@id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/z"
        android:text="3"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="@id/c"
        app:layout_constraintLeft_toLeftOf="@id/c"
        app:layout_constraintTop_toTopOf="@id/c"
        app:layout_constraintBottom_toBottomOf="@id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/theDice"
        android:src="@drawable/sixs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/what"
        app:layout_constraintBottom_toTopOf="@id/a"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>